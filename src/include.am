# library
lib_LTLIBRARIES = src/libmega.la

# CXX flags
if WIN32
src_libmega_la_CXXFLAGS = -D_WIN32=1 -Iinclude/ -Iinclude/mega/win32 $(LIBS_EXTRA) $(SDK_CXXFLAGS)
else
src_libmega_la_CXXFLAGS = $(SDK_CXXFLAGS)
endif

if BUILD_JS
src_libmega_la_CXXFLAGS += $(EMSCRIPTEN_FLAGS)
endif

# Libs
if WIN32
src_libmega_la_LIBADD = $(LIBS_EXTRA) $(SDK_LDFLAGS) $(SDK_LIBS)
else
src_libmega_la_LIBADD = $(LIBS_EXTRA) $(SDK_LDFLAGS) $(SDK_LIBS)
endif

# add library version
src_libmega_la_LDFLAGS = -version-info $(VERSION_INFO)

if BUILD_JS
src_libmega_la_LDFLAGS += --js-library bindings/js/library.js \
    -s EXPORT_NAME=\"MEGASDK\" -s ALLOW_MEMORY_GROWTH=1 \
    -s ASM_JS=1 -s NO_EXIT_RUNTIME=1 -s NO_FILESYSTEM=1 -s NO_BROWSER=1 \
    -s ABORTING_MALLOC=0
endif

if ENABLE_STATIC
src_libmega_la_LDFLAGS += -Wl,-static -all-static
endif

